<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- The above 3 meta tags *must* come first in the head; 
    any other head content must come *after* these tags -->

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/css/font-awesome.css" />
    <!-- Custom stylesheet -->
    <link rel="stylesheet" href="/css/style.css" />

    <title><%= settingsInfo?.website_title || 'Z-News' %></title>
  </head>

  <body>
    <!-- HEADER -->
    <div id="header">
      <!-- container -->
      <div class="container">
        <div class="row justify-content-center">
          <!-- LOGO -->
          <div class="col-md-3">
            <a href="/" id="logo">
              <img
                src="<%= settingsInfo?.website_logo ? '/uploads/' + settingsInfo?.website_logo : '/images/news.jpg' %>"
                alt="Logo"
              />
            </a>
          </div>
          <!-- /LOGO -->
        </div>
      </div>
    </div>

    <!-- /HEADER -->

    <!-- Menu Bar -->
    <div id="menu-bar">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <ul class="menu">
              <li><a href="/">Home</a></li>

              <% categories?.forEach((category) => { %>
              <li>
                <a href="/category/<%= category.slug %>">
                  <%= category.name %>
                </a>
              </li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- /Menu Bar -->

    <div id="main-content">
      <div class="container">
        <div class="row">
          <div class="col-md-8"><%- body %></div>

          <!-- sidebar -->
          <%- include('partials/sidebar') %>
          <!-- /sidebar -->
        </div>
      </div>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <span>
              Â© Copyright 2025 News Website <%= settingsInfo?.footer_description ?
              '| ' + settingsInfo?.footer_description : '| Z-News' %> | Powered by
              <a href="#">Developer</a>
            </span>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
