<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Form Validation</title>
  </head>

  <body>
    <div class="container">
      <div class="row mb-4">
        <div class="col-6 bg-warning-subtle">
          <h1>Form Validation</h1>
        </div>
      </div>

      <% if(errors.length > 0) { %>
      <div class="row mb-3">
        <div class="col-6">
          <ul class="alert alert-danger" style="list-style-position: inside">
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      </div>
      <% } %>

      <form action="/" method="POST">
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label text-end">User Name :</label>
          <div class="col-sm-3">
            <input type="text" name="userName" class="form-control" />
          </div>
        </div>

        <div class="row mb-3">
          <label class="col-sm-2 col-form-label text-end">Email :</label>
          <div class="col-sm-3">
            <input type="email" name="userEmail" class="form-control" />
          </div>
        </div>

        <div class="row mb-3">
          <label class="col-sm-2 col-form-label text-end">Password :</label>
          <div class="col-sm-3">
            <input type="password" name="userPass" class="form-control" />
          </div>
        </div>

        <div class="row mb-3">
          <label class="col-sm-2 col-form-label text-end">Age :</label>
          <div class="col-sm-3">
            <input type="number" name="userAge" class="form-control" />
          </div>
        </div>

        <div class="row mb-3">
          <label class="col-sm-2 col-form-label text-end">City :</label>

          <div class="col-sm-3">
            <select name="userCity" class="form-control">
              <option value="Delhi">Delhi</option>
              <option value="Mumbai">Mumbai</option>
              <option value="Goa">Goa</option>
              <option value="Agra">Agra</option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2 offset-sm-2">
            <input type="submit" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
